{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "catkin_make build (MODELS=OFF)",
            "type": "shell",
            "command": "catkin_make",
            "args": [
                "--cmake-args",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DBUILD_CUDA=OFF",
                "-DBUILD_MODELS=OFF"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc"
            }
        },
        {
            "label": "catkin_make build  (MODELS=ON)",
            "type": "shell",
            "command": "catkin_make",
            "args": [
                "--cmake-args",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DBUILD_CUDA=ON",
                "-DBUILD_MODELS=ON"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc"
            }
        },
        {
            "label": "catkin_make clean",
            "type": "shell",
            "command": "catkin_make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc"
            }
        }
    ]
}
